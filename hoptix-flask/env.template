# Hoptix Flask Application Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
RAW_BUCKET=hoptix-raw-devprod
DERIV_BUCKET=hoptix-deriv-devprod

# SQS Configuration
SQS_QUEUE_URL=your_sqs_queue_url_here
SQS_DLQ_URL=your_sqs_dlq_url_here
SQS_VISIBILITY_TIMEOUT=1800
SQS_WAIT_TIME=20

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
ASR_MODEL=gpt-4o-transcribe
STEP1_MODEL=o3
STEP2_MODEL=o3

# Prompts Configuration
PROMPTS_DIR=./prompts
ITEMS_JSON=items.json
MEALS_JSON=meals.json
UPSELLING_JSON=upselling.json
UPSIZING_JSON=upsizing.json
