# ==============================================
# Hoptix Environment Variables Configuration
# ==============================================
#
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control
#
# ==============================================

# ----------------------------------------------
# Supabase Configuration (Required for all services)
# ----------------------------------------------

# Supabase project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous key (for frontend and auth-service)
SUPABASE_ANON_KEY=your-anon-key-here

# Supabase service role key (for backend only - has admin privileges)
SUPABASE_SERVICE_KEY=your-service-role-key-here


# ----------------------------------------------
# AWS Configuration (Required for backend)
# ----------------------------------------------

# AWS region for S3 buckets
AWS_REGION=us-east-2

# AWS credentials
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# S3 bucket names
RAW_BUCKET=hoptix-raw-devprod
DERIV_BUCKET=hoptix-deriv-devprod

# S3 configuration
PART_SIZE_BYTES=67108864
URL_TTL_SECONDS=1800


# ----------------------------------------------
# OpenAI Configuration (Required for backend)
# ----------------------------------------------

# OpenAI API key for transcription and grading
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# OpenAI model configurations
ASR_MODEL=whisper-1
STEP1_MODEL=gpt-4o-mini
STEP2_MODEL=gpt-4o-mini


# ----------------------------------------------
# AWS SQS Configuration (Optional for backend)
# ----------------------------------------------

# SQS queue URL for async processing
SQS_QUEUE_URL=


# ----------------------------------------------
# Additional API Keys (Optional for backend)
# ----------------------------------------------

# AssemblyAI API key (alternative transcription service)
AAI_API_KEY=

# Pinecone API key (vector database)
PINECONE_API_KEY=


# ----------------------------------------------
# Google Drive Configuration (Optional for backend)
# ----------------------------------------------

# Google Drive credentials JSON (for audio file import)
# Format: {"token": "...", "refresh_token": "...", ...}
GOOGLE_DRIVE_CREDENTIALS=


# ----------------------------------------------
# Service Configuration (Development)
# ----------------------------------------------

# Auth service port (default: 8081)
# Only needed for auth-service in development
PORT=8081


# ==============================================
# Docker Deployment Notes
# ==============================================
#
# When deploying with docker-compose:
# 1. Copy this file to .env in the project root
# 2. Fill in all required values above
# 3. Run: docker-compose up -d
#
# Required for docker-compose:
# - SUPABASE_URL
# - SUPABASE_ANON_KEY
# - SUPABASE_SERVICE_KEY
# - AWS credentials and bucket names
# - OPENAI_API_KEY
#
# Frontend build arguments (automatically passed from .env):
# - NEXT_PUBLIC_SUPABASE_URL (from SUPABASE_URL)
# - NEXT_PUBLIC_SUPABASE_ANON_KEY (from SUPABASE_ANON_KEY)
# - NEXT_PUBLIC_FLASK_API_URL (hardcoded to http://localhost:8000)
# - NEXT_PUBLIC_AUTH_SERVICE_URL (hardcoded to http://localhost:8081)
#
# ==============================================
